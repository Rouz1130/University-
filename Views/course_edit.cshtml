<h1>edit course</h1>

<h2>Edit course: @Model.GetCourseName()</h2>
<form action="/courses/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="course-id" type="hidden" value="@Model.GetId()">
  <label for="course-name">Course Name:</label>
  <input id="course-name" name="course-name" type="text">
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
