<h1>All Courses</h1>

@if (@Model.Count == 0)
{
  <p>No Courses</p>
}
<ul>
  @foreach (var course in Model)
  {
    <li>@course.GetCourseName().ToUpper()</li>
    <li>@course.GetCourseNumber()</li>
    <ul>
      <li><a href="/courses/edit/@course.GetId()">Edit</a></li>
      <li><a href="/courses/delete/@course.GetId()">Delete</a></li>
    </ul>
  }
</ul>
<a href="/courses/new">Add new</a>
<form action="/courses/delete" method="post">
    <button type="submit" name="button">DELETE ALL COURSES</button>
</form>
