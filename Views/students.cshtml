<h1>All Students</h1>

@if (@Model.Count == 0)
{
  <p>No Students</p>
}
<ul>
  @foreach (var student in Model)
  {
    <li><a href="/students/@student.GetId()">@student.GetId()</a></li>
    <li>@student.GetName()</li>
    <li>@student.GetDoe()</li>
    <li>@student.GetId()</li>
    <li><a href="/students/edit/@student.GetId()">Edit</a></li>
    <li><a href="/students/delete/@student.GetId()">Delete</a></li>
  }
</ul>
<a href="/students/new">Add new</a>
<form action="/students/delete" method="post">
    <button type="submit" name="button">DELETE ALL STUDENTS</button>
</form>
